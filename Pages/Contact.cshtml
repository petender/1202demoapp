@page
@model _1202demoapp.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" />
            </div>
            <div class="mb-3">
                <label asp-for="Message" class="form-label">Message</label>
                <textarea asp-for="Message" class="form-control" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        @if (Model.SubmitSuccess)
        {
            <div class="alert alert-success mt-3">
                Thank you for contacting us, @Model.Name!
            </div>
        }
    </div>
</div>
